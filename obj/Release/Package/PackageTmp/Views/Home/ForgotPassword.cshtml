@{
    ViewBag.Title = "Forgot Password";
}

@model TheAftermath_V2.Models.Account

@using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="row bg-black my-5 border border-light rounded">
            <div class="col-md-3"></div>
            <div class="col-6 col-md-3">
                <img src="~/Content/Images/Graffiti/emailGreen-500x150.png" class="img-fluid mx-auto d-block inputLabel mh-10" />
            </div>
            <div class='col-6 col-md-3 my-3'>
                <div class="input-group input-group-lg">
                    @Html.TextBoxFor(m => m.Email, new { @id = "email", @class = "form-control mx-auto text-center my-2", @placeholder = "Enter Email on record", @required = "required" })
                </div>
            </div>
            <div class='col-md-3'></div>

            <div class="col-md-3"></div>
            <div class="col-12 col-md-6">
                <h5 id="emailMsg" class="text-center font-weight-bold"></h5>
            </div>
            <div class="col-md-3"></div>

            <div class="col-md-4"></div>
            <div class="col-12 col-md-4 my-3">
                <input id="submitBtn" class="btn btn-lg btn-success mx-auto btn-block" type="submit" value="SUBMIT" />
            </div>
            <div class="col-md-4"></div>
        </div>
    </fieldset>
}
<script src="@Url.Content("~/Scripts/Client/ResetValidation.js")" type="text/javascript"></script>