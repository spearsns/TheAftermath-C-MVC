
@{
    ViewBag.Title = "Campaigns";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('body').css('background-image', 'url("../Content/Images/Textures/darkRust.jpg")');
    });
</script>

<!-- MODALS -->
<!-- PASSWORD MODAL -->
<div class="modal fade" id="passwordModal" data-backdrop="static" tabindex="-1" aria-labelledby="passwordModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="font-weight-bold mx-auto text-uppercase gameHeader"></h5>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row bg-black h-15 justify-content-md-center">
                        <div class="col-6 col-md-4">
                            <img src="~/Content/Images/Graffiti/passwordWhite-500x150.png" class="img-fluid mx-auto d-block mh-10" />
                        </div>
                        <div class="col-6 col-md-4">
                            <div class="input-group input-group-lg">
                                <input class="form-control text-center px-0 py-0 my-4" type="password" id="passwordInput" value="" />
                            </div>
                        </div>
                    </div>
                    <div class="row bg-black">
                        <h4 id="errorMsg" class="mx-auto font-weight-bold text-red d-none"></h4>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-lg btn-success border border-dark mx-auto submitBtn" data-target="" data-id="">SUBMIT</button>
                <button type="button" class="btn btn-lg btn-danger border border-dark mx-auto cancelBtn" data-dismiss="modal">CANCEL</button>
            </div>
        </div>
    </div>
</div>
<!-- CHARACTER SELECT MODAL -->
<div class="modal fade" id="charSelectModal" data-backdrop="static" tabindex="-2" aria-labelledby="charSelectModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="font-weight-bold mx-auto text-uppercase gameHeader"></h5>
            </div>
            <div class="modal-body bg-black">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-1"></div>
                        <div class="d-none d-lg-block col-lg-2">
                            <img src="~/Content/Images/Graffiti/name-black-500x150.png" class="img-fluid mx-auto d-block mh-5" />
                        </div>
                        <div class="d-none d-lg-block col-lg-2">
                            <img src="~/Content/Images/Graffiti/status-green-500x150.png" class="img-fluid mx-auto d-block mh-5" />
                        </div>
                        <div class="d-none d-lg-block col-lg-2">
                            <img src="~/Content/Images/Graffiti/background-white-500x150.png" class="img-fluid mx-auto d-block mh-5" />
                        </div>
                        <div class="d-none d-lg-block col-lg-2">
                            <img src="~/Content/Images/Graffiti/total-white-500x150.png" class="img-fluid mx-auto d-block mh-5" />
                        </div>
                        <div class="d-none d-lg-block col-lg-2">
                            <img src="~/Content/Images/Graffiti/exp-red-500x150.png" class="img-fluid mx-auto d-block mh-5" />
                        </div>
                        <div class="col-lg-1"></div>
                    </div>
                    <div class="bg-black" id="characterList"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-lg btn-danger border border-dark mx-auto cancelBtn" data-dismiss="modal">CANCEL</button>
            </div>
        </div>
    </div>
</div>
<!-- DESCRIPTION MODAL -->
<div class="modal fade" id="descriptionModal" data-backdrop="static" tabindex="-3" aria-labelledby="descriptionModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="font-weight-bold mx-auto text-uppercase modal-title gameHeader"></h5>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row bg-black pt-5">
                        <div class="col-lg-3"></div>
                        <div class="col-6 col-lg-3">
                            <img src="~/Content/Images/Graffiti/Season-black-500x150.png" class="img-fluid mx-auto d-block" />
                        </div>
                        <div class="col-6 col-lg-3">
                            <div class="input-group input-group-lg">
                                <input class="form-control text-center px-0 py-0 my-3" type="text" id="descSeason" value="" readonly />
                            </div>
                        </div>
                        <div class="col-lg-3"></div>
                    </div>

                    <div class="row bg-black">
                        <div class="col-lg-3"></div>
                        <div class="col-6 col-lg-3">
                            <img src="~/Content/Images/Graffiti/Year-black-500x150.png" class="img-fluid mx-auto d-block" />
                        </div>
                        <div class="col-6 col-lg-3">
                            <div class="input-group input-group-lg">
                                <input class="form-control text-center px-0 py-0 my-3" type="text" id="descYear" value="" readonly />
                            </div>
                        </div>
                        <div class="col-lg-3"></div>
                    </div>

                    <div class="row bg-black justify-content-md-around pb-5">
                        <div class="col-12 col-md-9">
                            <p id="descText" class="bg-white font-weight-bold w-100 h-33" readonly></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-lg btn-danger border border-dark mx-auto cancelBtn" data-dismiss="modal">CANCEL</button>
            </div>
        </div>
    </div>
</div>

<div id="IM-Modals"></div>

<!-- PAGE START -->
<div class="row">
    <div class="col-12 col-md-9">
        <img src="~/Content/Images/Graffiti/campaigns-900x150.png" class="img-fluid mx-auto d-block h-15 my-2" />
    </div>
    <div class="col-3 d-md-none"></div>
    <div class="col-6 col-md-3">
        <a href="@Url.Action("NewGame", "Games")" class="btn btn-lg btn-red font-weight-bold border border-light rounded mx-auto btn-block my-md-5" type="button">NEW GAME</a>
    </div>
    <div class="col-3 d-md-none"></div>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="d-none d-md-block col-md-2">
        <img src="~/Content/Images/Graffiti/Name-white-500x150.png" class="img-fluid mx-auto d-block mh-5" />
    </div>
    <div class="d-none d-md-block col-md-2">
        <img src="~/Content/Images/Graffiti/pop-white-500x150.png" class="img-fluid mx-auto d-block mh-5" />
    </div>
    <div class="d-none d-md-block col-md-2">
        <img src="~/Content/Images/Graffiti/description-white-500x150.png" class="img-fluid mx-auto d-block mh-5" />
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-2"></div>
</div>

<div id="gameList" class="bg-black my-2 px-2 border border-light rounded"></div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/jquery.signalR-2.4.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Custom/SignalR-IM.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/signalr/hubs")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Custom/GameSelect.js")" type="text/javascript"></script>
}