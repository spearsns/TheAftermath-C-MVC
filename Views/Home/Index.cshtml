@{
    ViewBag.Title = "Lobby";
}

<div id="IM-Modals"></div>
<div class="modal fade rounded-lg" id="introModal" tabindex="-1" aria-labelledby="introModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-body">
                <div class="embed-responsive embed-responsive-16by9">
                    <video id="aftermathIntro" controls autoplay muted>
                        <source src="~/Content/Videos/AftermathIntro.mp4" type="video/mp4">
                    </video>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <img src="~/Content/Images/Graffiti/WttA-green-900x150.png" class="img-fluid mx-auto d-block" />
    </div>
</div>

<!-- CHAT AREA -->
<div class="row border border-dark rounded">
    <div class="col-9 col-lg-10 border border-dark overflow-auto" id="indexChatLogArea">
        <ul id="lobbyChatLog"></ul>
    </div>

    <div class="col-3 col-lg-2 border border-dark" id="indexUserListArea">
        <div class="row bg-info">
            <div class="col">
                <img src="~/Content/Images/Graffiti/online-200x50.png" class="img-fluid mx-auto d-block" />
            </div>
        </div>

        <div class="row">
            <div class="col" id="lobbyActiveUserList">
            </div>
        </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col-9 col-lg-10">
        <div class="input-group my-2">
            <input id="lobbyChatInput" class="form-control px-2 py-0" type="text" />
        </div>
    </div>
    <div class="col-3 col-lg-2 my-2">
        <button id="sendLobbyMsgBtn" class="btn btn-block btn-success font-weight-bold">SEND</button>
    </div>
</div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/jquery.signalR-2.4.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Custom/SignalR-Home.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/signalr/hubs")" type="text/javascript"></script>
}