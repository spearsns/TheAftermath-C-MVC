@{
    ViewBag.Title = "Registration";
}

@model TheAftermath_V2.Models.Account

@using (Html.BeginForm("Registration", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="row bg-black my-5 border border-light rounded">
            <div class="col-md-3"></div>
            <div class="col-6 col-md-3">
                <img src="~/Content/Images/Graffiti/usernameBlue-500x150.png" class="img-fluid mx-auto d-block inputLabel" />
            </div>
            <div class='col-6 col-md-3 my-3'>
                <div class="input-group input-group-lg">
                    @Html.TextBoxFor(m => m.Username, new { @id = "username", @class = "form-control mx-auto text-center", @placeholder = "Enter Username", @required = "required" })
                </div>
            </div>
            <div class="col-12 col-md-3"><h4 class="font-weight-bold text-center my-4" id="usernameMsg"></h4></div>

            <div class="col-md-3"></div>
            <div class="col-6 col-md-3">
                <img src="~/Content/Images/Graffiti/passwordWhite-500x150.png" class="img-fluid mx-auto d-block inputLabel" />
            </div>
            <div class='col-6 col-md-3 my-3'>
                <div class="input-group input-group-lg">
                    @Html.TextBoxFor(m => m.Password, new { @id = "password", @class = "form-control mx-auto text-center", @placeholder = "Enter Password", @type = "password", @required = "required" })
                </div>
            </div>
            <div class='col-md-3'></div>

            <div class="col-md-3"></div>
            <div class="col-6 col-md-3">
                <img src="~/Content/Images/Graffiti/confirmPW-500x150.png" class="img-fluid mx-auto d-block inputLabel" />
            </div>
            <div class='col-6 col-md-3 my-3'>
                <div class="input-group input-group-lg">
                    <input type="password" name="ConfirmPassword" id="confirmPassword" class="form-control mx-auto text-center" placeholder="Confirm Password" required />
                </div>
            </div>
            <div class="col-12 col-md-3"><h4 class="font-weight-bold text-center my-4" id="confirmPWMsg"></h4></div>

            <div class="col-md-3"></div>
            <div class="col-6 col-md-3">
                <img src="~/Content/Images/Graffiti/emailGreen-500x150.png" class="img-fluid mx-auto d-block inputLabel" />
            </div>
            <div class='col-6 col-md-3 my-3'>
                <div class="input-group input-group-lg">
                    @Html.TextBoxFor(m => m.Email, new { @id = "email", @class = "form-control mx-auto text-center", @placeholder = "Enter Email", @required = "required" })
                </div>
            </div>
            <div class="col-12 col-md-3"><h4 class="font-weight-bold text-center my-4" id="emailMsg"></h4></div>

            <div class="col-md-3"></div>
            <div class="col-6 col-md-3">
                <img src="~/Content/Images/Graffiti/confirmEmailGreen-500x150.png" class="img-fluid mx-auto d-block inputLabel" />
            </div>
            <div class='col-6 col-md-3 my-3'>
                <div class="input-group input-group-lg">
                    <input type="text" name="ConfirmEmail" id="confirmEmail" class="form-control mx-auto text-center" placeholder="Confirm Email" required />
                </div>
            </div>
            <div class="col-12 col-md-3"><h4 class="font-weight-bold text-center my-4" id="confirmEmailMsg"></h4></div>

            <div class="col-md-4"></div>
            <div class="col-12 col-md-4 my-3">
                <input id="submitBtn" class="btn btn-lg btn-success mx-auto btn-block" type="submit" value="SUBMIT" />
            </div>
            <div class="col-md-4"></div>
        </div>
    </fieldset>
}
<script src="@Url.Content("~/Scripts/Custom/Validation.js")" type="text/javascript"></script>