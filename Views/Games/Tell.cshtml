@{
    ViewBag.Title = "Tell";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('body').css('background-image', 'url("../Content/Images/Textures/darkScratch.jpg")');
        $('#bodyContainer').removeClass("container").addClass("container-fluid");
    });
</script>

<!-- MODALS -->
<!-- ADMIN MODAL -->
<div class="modal fade" id="adminModal" data-backdrop="static" tabindex="-2" aria-labelledby="adminModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-xl">
        <div class="modal-header bg-black">

        </div>
        <div class="modal-content">
            <div class="modal-body">
                <div class="container-fluid bg-black">
                    <!-- LOCK GAME -->
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-6">
                            <button id="lockBtn" class="btn btn-lg btn-secondary border border-light mx-auto btn-block mt-3 mx-auto">LOCK GAME</button>
                        </div>
                        <div class="col-3"></div>
                    </div>
                    <hr />
                    <!-- KILL CHARACTER -->
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-8 col-md-4">
                            <select id="killList" class="custom-select custom-select-lg mt-2 text-center w-100"></select>
                        </div>
                        <div class="col-4">
                            <button id="killBtn" class="btn btn-lg btn-red border border-light mx-auto btn-block my-2 mx-auto">KILL</button>
                        </div>
                        <div class="col-md-2"></div>
                    </div>
                    <hr />
                    <!-- BOOT USER -->
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-8 col-md-4">
                            <select id="bootList" class="custom-select custom-select-lg mt-2 text-center w-100"></select>
                        </div>
                        <div class="col-4">
                            <button id="bootUserBtn" class="btn btn-lg btn-red border border-light mx-auto btn-block my-2 mx-auto">BOOT</button>
                        </div>
                        <div class="col-md-2"></div>
                    </div>
                    <hr />
                    <!-- CHANGE SEASON -->
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-6 col-md-3">
                            <img src="~/Content/Images/Graffiti/Season-black-500x150.png" class="img-fluid mx-auto d-block" />
                        </div>
                        <div class="col-6 col-md-3">
                            <select name="Season" id="season" class="custom-select custom-select-lg mt-2 text-center w-100" value="">
                                <option value="Spring">Spring</option>
                                <option value="Summer">Summer</option>
                                <option value="Fall">Fall</option>
                                <option value="Winter">Winter</option>
                            </select>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <!-- CHANGE YEAR -->
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-6 col-md-3">
                            <img src="~/Content/Images/Graffiti/Year-black-500x150.png" class="img-fluid mx-auto d-block" />
                        </div>
                        <div class="col-6 col-md-3">
                            <select name="Year" id="year" class="custom-select custom-select-lg mt-2 text-center w-100" value="">
                                <option disabled>[Pre-Apocalypse]</option>
                                <option value="2012">2012</option>
                                <option disabled>[The Apocalypse]</option>
                                <option value="2013">2013</option>
                                <option value="2014">2014</option>
                                <option value="2015">2015</option>
                                <option value="2016">2016</option>
                                <option value="2017">2017</option>
                                <option disabled>[The Aftermath]</option>
                                <option value="2018">2018</option>
                                <option value="2019">2019</option>
                                <option value="2020">2020</option>
                                <option value="2021">2021</option>
                                <option disabled>[Present Day]</option>
                                <option value="2022">2022</option>
                                <option value="2023">2023</option>
                                <option value="2024">2024</option>
                                <option value="2025">2025</option>
                                <option value="2026">2026</option>
                                <option value="2027">2027</option>
                                <option value="2028">2028</option>
                                <option value="2029">2029</option>
                                <option value="2030">2030</option>
                                <option value="2031">2031</option>
                                <option value="2032">2032</option>
                            </select>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <!-- CONFIRM DATE CHANGE -->
                    <div class="row">
                        <div class="col-4"></div>
                        <div class="col-4">
                            <button id="dateBtn" class="btn btn-lg btn-success border border-light mx-auto btn-block my-2 mx-auto">UPDATE</button>
                        </div>
                        <div class="col-4"></div>
                    </div>
                    <hr />
                    <!-- CHANGE DESCRIPTION -->
                    <div class="row">
                        <div class="col-3 d-md-none"></div>
                        <div class="col-6 col-md-4">
                            <img src="~/Content/Images/Graffiti/description-white-500x150.png" class="img-fluid mx-auto d-block">
                        </div>
                        <div class="col-3 d-md-none"></div>
                        <div class="col-12 col-md-8">
                            <textarea id="description" name="Description" rows="4" cols="50" class="rounded w-100"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4"></div>
                        <div class="col-4">
                            <button id="descriptionBtn" class="btn btn-lg btn-success border border-light mx-auto btn-block mt-2 mb-3 mx-auto">UPDATE</button>
                        </div>
                        <div class="col-4"></div>
                    </div>
                    <!-- MESSAGE SLOT-->
                    <div class="row">
                        <div class="col-4"></div>
                        <div id="adminAlert" class="col-4 d-none">
                            <h4 id="adminMsg" class="text-center text-success font-weight-bold"></h4>
                        </div>
                        <div class="col-4"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="adminCancelBtn" class="btn btn-lg btn-danger border border-dark mx-auto my-2 mx-auto" data-dismiss="modal">CLOSE</button>
            </div>
        </div>
    </div>
</div>
<!-- CHARACTER SHEET MODAL -->
<div class="modal fade" id="charSheetModal" data-backdrop="static" tabindex="-3" aria-labelledby="charSheetModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-xl">
        <div class="modal-header bg-black">

        </div>
        <div class="modal-content">
            <div class="modal-body">

            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
<!-- ID MARKS MODAL -->
<div class="modal fade" id="idMarksModal" data-backdrop="static" tabindex="-4" aria-labelledby="idMarksModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-xl">
        <div class="modal-header bg-black">

        </div>
        <div class="modal-content">
            <div class="modal-body">

            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
<!-- NOTES MODAL -->
<div class="modal fade" id="notesModal" tabindex="-5" aria-labelledby="notesModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-xl">
        <div class="modal-header bg-black">
            <h4 class="font-weight-bold text-white text-center mx-auto">NOTES:</h4>
        </div>
        <div class="modal-content">
            <div class="modal-body">
                <textarea id="tellNotes" class="w-100" name="charNotes" rows="16" cols="80"></textarea>
            </div>
            <div class="modal-footer">
                <!-- IF DECIDE TO STORE NOTES IN DB -->
                <!-- <button type="submit" class="btn btn-lg btn-success border border-dark mx-auto" data-dismiss="modal">UPDATE</button> -->
                <button type="button" class="btn btn-lg btn-danger border border-dark mx-auto" data-dismiss="modal">CLOSE</button>
            </div>
        </div>
    </div>
</div>

<div id="IM-Modals"></div>

<!-- TASKBAR -->
<div class="row bg-black sticky-top justify-content-around border border-white">
    <!-- DICE -->
    <div class="col-4 px-0">
        <button id="twoD10Btn" class="btn btn-block btn-dark border border-white text-center font-weight-bold my-2 mx-auto w-75" type="button">2D10</button>
    </div>
    <div class="col-4 px-0">
        <button id="randomHitBtn" class="btn btn-block btn-light border border-white text-center font-weight-bold my-2 mx-auto w-75" type="button">RANDOM HIT</button>
    </div>
    <div class="col-4 px-0">
        <button id="D100Btn" class="btn btn-block btn-dark border border-white text-center font-weight-bold my-2 mx-auto w-75" type="button">D100</button>
    </div>
    <!-- LIKELIHOOD OF SUCCESS -->
    <div class="col-4 px-0">
        <h5 class="font-weight-bold text-white text-center my-3">LIKELIHOOD CALC:</h5>
    </div>
    <div class="col-4 px-0">
        <div class="input-group my-2 text-center mx-auto w-75">
            <input id="LoSValue" class="form-control text-center px-0 py-0" type="number" value="" placeholder="Enter LoS" />
        </div>
    </div>
    <div class="col-4 px-0">
        <button id="LoSBtn" class="btn btn-block btn-success border border-white text-center font-weight-bold my-2 mx-auto w-75" type="button">SHOW</button>
    </div>
    <!-- ADMIN BUTTON -->
    <div class="col-4"></div>
    <div class="col-4 px-0">
        <button id="adminBtn" class="btn btn-block btn-red border border-white text-center font-weight-bold my-2 mx-auto w-75" type="button">ADMIN</button>
    </div>
    <div class="col-4"></div>
</div>

<!-- GAME INFO -->
<div class="row">
    <div class="col-6 col-md-2">
        <img src="~/Content/Images/Graffiti/Campaign-Red-500x150.png" class="img-fluid mx-auto d-block" />
    </div>
    <div class="col-6 col-md-2">
        <div class="input-group my-2 text-center">
            <input id="campaignName" class="form-control text-center px-0 py-0 my-3" type="text" value="" readonly />
        </div>
    </div>
    <div class="col-6 col-md-2">
        <img src="~/Content/Images/Graffiti/Conference-white-500x150.png" class="img-fluid mx-auto d-block" />
    </div>
    <div class="col-6 col-md-2">
        <div class="input-group my-2 text-center">
            <input id="conferenceLink" class="form-control text-center px-0 py-0 my-3 border border-primary bw-thick" type="text" value="" readonly />
        </div>
    </div>
    <div class="col-6 col-md-2">
        <img src="~/Content/Images/Graffiti/Storyteller-red-500x150.png" class="img-fluid mx-auto d-block" />
    </div>
    <div class="col-6 col-md-2">
        <div class="input-group my-2 text-center">
            <input id="storyteller" class="form-control text-center px-0 py-0 my-3" type="text" value="" readonly />
        </div>
    </div>
</div>

<!-- MAPS, NOTES IMAGES -->
<div class="row justify-content-around">
    <div class="col-3">
        <button id="mapBtn" class="btn btn-block btn-info border border-white text-center font-weight-bold my-2 mx-auto" type="button">MAP</button>
    </div>
    <div class="col-3">
        <button id="notesBtn" class="btn btn-block btn-light border border-dark text-center font-weight-bold my-2 mx-auto" data-toggle="modal" data-target="#notesModal" type="button">NOTES</button>
    </div>
    <div class="col-3">
        <button id="pictureBtn" class="btn btn-block btn-info border border-white text-center font-weight-bold my-2 mx-auto" type="button">PIC</button>
    </div>
</div>

<!-- CHAT AREA -->
<div class="row border border-dark rounded">
    <div class="col-12 border border-dark overflow-auto" id="gameChatLogArea">
        <ul id="gameChatLog"></ul>
    </div>
</div>

<div class="row mt-2">
    <div class="col-9 col-lg-10">
        <div class="input-group my-2">
            <input id="gameChatInput" class="form-control px-2 py-0" type="text" />
        </div>
    </div>
    <div class="col-3 col-lg-2 my-2">
        <button id="sendGameMsgBtn" class="btn btn-block btn-success font-weight-bold">SEND</button>
    </div>
</div>

<!-- PLAYER AREA -->
<div class="row justify-content-around">
    <div class="d-none d-md-block col-md-2">
        <img src="~/Content/Images/Graffiti/Player-white-500x150.png" class="img-fluid mx-auto d-block" />
    </div>
    <div class="d-none d-md-block col-md-2">
        <img src="~/Content/Images/Graffiti/character-red-500x150.png" class="img-fluid mx-auto d-block" />
    </div>
    <div class="d-none d-md-block col-md-2">
        <img src="~/Content/Images/Graffiti/IDMarks-black-500x150.png" class="img-fluid mx-auto d-block" />
    </div>
    <div class="d-none d-md-block col-md-2">
        <img src="~/Content/Images/Graffiti/exp-red-500x150.png" class="img-fluid mx-auto d-block" />
    </div>
    <div class="d-none d-md-block col-md-2"></div>
</div>

<div id="userList" class="row bg-black justify-content-around h-40"></div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/jquery.signalR-2.4.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Custom/SignalR-Game.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/signalr/hubs")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Custom/Tell.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Custom/SignalR-IM.js")" type="text/javascript"></script>
}