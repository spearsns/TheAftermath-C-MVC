                    <div class="col-3"></div>
                    <div class="col-3">
                        <h5 class="font-weight-bold text-center my-3 mx-auto expPoolLbl" data-shortTxt="EXP:" data-longTxt="EXP POOL:">EXP:</h5>
                    </div>
                    <div class="col-3">
                        <div class="input-group my-2 text-center">
                            <input class="form-control text-center px-0 py-0 expPool" type="number" name="expPool" value="" readonly />
                        </div>
                    </div>
                    <div class="col-3"></div>
                </div>

                <div class="row bg-secondary" id="costRow">
                    <div class="col-3"></div>
                    <div class="col-3">
                        <h5 class="font-weight-bold text-center my-3 mx-auto costLbl" data-shortTxt="COST:" data-longTxt="COST TO INCREASE:">COST:</h5>
                    </div>
                    <div class="col-3">
                        <div class="input-group my-2 text-center">
                            <input class="form-control text-center px-0 py-0" id="skillCost" type="number" value="" readonly />
                        </div>
                    </div>
                    <div class="col-3"></div>
                </div>

                <div class="row bg-white">
                    <div class="col-1"></div>
                    <div class="col-2">
                        <button class="btn btn-block btn-dark text-center my-2 px-0" id="decSkillBtn">-</button>
                    </div>
                    <div class="col-3">
                        <h5 class="font-weight-bold text-center text-uppercase my-3 mx-auto" id="currentSkill" data-shortTxt="" data-longTxt=""></h5>
                    </div>
                    <div class="col-3">
                        <div class="input-group my-2 text-center">
                            <input class="form-control text-center px-0 py-0" type="number" id="currentSkillVal" name="CurrentSkillVal" value="" readonly />
                        </div>
                    </div>
                    <div class="col-2">
                        <button class="btn btn-block btn-dark text-center my-2 px-0" id="incSkillBtn">+</button>
                    </div>
                    <div class="col-1"></div>
                </div>

                <div class="row bg-white">
                    <div class="col-3"></div>
                    <div class="col-3">
                        <h5 class="font-weight-bold my-3 mx-auto text-center" id="originalAttr">ORIGINAL:</h5>
                    </div>
                    <div class="col-3">
                        <div class="input-group my-2 text-center">
                            <input class="form-control text-center px-0 py-0" type="number" id="originalSkillVal" name="OriginalSkillVal" value="" readonly />
                        </div>
                    </div>
                    <div class="col-3"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="skillConfirmBtn" class="btn btn-lg btn-success border border-dark mx-auto" data-attr="">CONFIRM</button>
                <button type="button" id="skillCancelBtn" class="btn btn-lg btn-danger border border-dark mx-auto" data-dismiss="modal">CANCEL</button>
            </div>
        </div>
    </div>
</div>

<!-- NEW SKILLS MODAL -->
<div class="modal fade" id="newSkillsModal" data-backdrop="static" tabindex="-5" aria-labelledby="newSkillsModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-xl">
        <div class="modal-header bg-black">
            <h4 class="modal-title font-weight-bold text-white mx-auto" id="staticBackdropLabel">LEARN NEW SKILL</h4>
        </div>
        <div class="modal-content">
            <div class="modal-body" id="NSM-begin">
                <div class="row bg-dark">
                    <div class="col-4">
                        <h6 class="font-weight-bold text-center text-white my-2">SKILL</h6>
                    </div>
                    <div class="col-8">
                        <h6 class="font-weight-bold text-center text-white my-2">DSCRPT</h6>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-lg btn-danger border border-dark mx-auto" id="NSM-cancelBtn" data-dismiss="modal">CANCEL</button>
            </div>
        </div>
    </div>
</div>

<!-- SUB SKILLS MODAL -->
<div class="modal fade" id="subSkillsModal" data-backdrop="static" tabindex="-6" aria-labelledby="subSkillsModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-dialog-scrollable modal-xl">
        <div class="modal-content">
            <div class="modal-body" id="SSM-begin">
                <div class="row bg-dark">
                    <div class="col-4">
                        <h6 class="font-weight-bold text-center text-white my-2">SKILL</h6>
                    </div>
                    <div class="col-8">
                        <h6 class="font-weight-bold text-center text-white my-2">DSCRPT</h6>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-lg btn-danger border border-dark mx-auto" id="SSM-cancelBtn" data-dismiss="modal">CANCEL</button>
            </div>
        </div>
    </div>
</div>

<!-- BEGIN FORM -->
@using (Html.BeginForm("CharacterManagement", "Characters", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <!-- BIOGRAPHY -->
    <div class="row bg-black">
        <div class="col-12">
            <h4 id="biographyLbl" class="font-weight-bold my-2 text-center text-white">CHARACTER BIOGRAPHY</h4>
        </div>
    </div>

    <fieldset>
        <!-- BACKGROUND || STRATEGY -->
        <div class="row bg-white">
            <div class="col-3 px-0">
                <h6 id="backgroundLbl" class="font-weight-bold my-3 text-center">BACKGROUND:</h6>
            </div>
            <div class="col-3 px-0">
                <div class="input-group my-2 text-center">
                    <input class="form-control text-center px-0 py-0" type="text" id="background" name="Background" value="@Model.Background" readonly />
                </div>
            </div>
            <div class="col-3 px-0">
                <h6 id="strategyLbl" class="font-weight-bold my-3 text-center" data-shortTxt="STRATEGY:" data-longTxt="SURVIVAL STRATEGY:">STRATEGY:</h6>
            </div>
            <div class="col-3 px-0">
                <div class="input-group my-2 text-center">
                    <input class="form-control text-center px-0 py-0" type="text" id="strategy" name="Strategy" value="@Model.Strategy" readonly />
                </div>
            </div>
        </div>

        <!-- HISTORY || HABITAT -->
        <div class="row bg-white">
            <div class="col-3 px-0">
                <h6 id="historyLbl" class="font-weight-bold my-3 text-center">HISTORY:</h6>
            </div>
            <div class="col-3 px-0">
                <div class="input-group my-2 text-center">
                    <input class="form-control text-center px-0 py-0" type="text" name="History" value="@Model.History" readonly />
                </div>
            </div>
            <div class="col-3 px-0">
                <h6 id="habitatLbl" class="font-weight-bold my-3 text-center" data-shortTxt="HABITAT:" data-longTxt="ORIGINAL HABITAT:">HABITAT:</h6>
            </div>
            <div class="col-3 px-0">
                <div class="input-group my-2 text-center">
                    <input class="form-control text-center px-0 py-0" type="text" name="Habitat" value="@Model.Habitat" readonly />
                </div>
            </div>
        </div>

        <!-- DEMOGRAPHICS || ATTRIBUTES -->
        <div class="row bg-white border-top border-dark">
            <div class="col-6 border-right border-dark">
                <h4 id="demographicsLbl" class="font-weight-bold my-2 text-center">DEMOGRAPHICS</h4>
            </div>
            <div class="col-6">
                <h4 id="attributeLbl" class="font-weight-bold my-2 text-center">ATTRIBUTES</h4>
            </div>
        </div>

        <!-- NAME || MEM / STR -->
        <div class="row bg-white">
            <div class="col-3 px-0">
                <h6 id="nameLbl" class="font-weight-bold my-3 text-center">NAME:</h6>
            </div>
            <div class="col-3 border-right border-dark px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="text" name="Name" value="@Model.Name" readonly />
                </div>
            </div>

            <div class="col-2 px-0">
                <div class="input-group my-0">
                    <button class="btn btn-block btn-light border border-success bw-thick text-center font-weight-bold my-1 attributeBtn" data-attr="memory" data-shortTxt="MEM" data-longTxt="MEMORY" type="button">MEM</button>
                </div>
            </div>
            <div class="col-1 px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="number" id="memory" name="Memory" value="@Model.Memory" readonly />
                </div>
            </div>
            <div class="col-2 px-0">
                <div class="input-group my-0">
                    <button class="btn btn-block btn-light border border-success bw-thick text-center font-weight-bold my-1 attributeBtn" data-attr="strength" data-shortTxt="STR" data-longTxt="STRENGTH" type="button">STR</button>
                </div>
            </div>
            <div class="col-1 px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="number" id="strength" name="Strength" value="@Model.Strength" readonly />
                </div>
            </div>
        </div>
        <!-- DOB || LOG / END -->
        <div class="row bg-white">
            <div class="col-3 px-0">
                <h6 id="birthdateLbl" class="font-weight-bold my-3 text-center" data-shortTxt="D.O.B:" data-longTxt="BIRTHDATE">BIRTHDATE:</h6>
            </div>
            <div class="col-3 border-right border-dark px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="text" name="Birthdate" value="@Model.Birthdate" readonly />
                </div>
            </div>
            <div class="col-2 px-0">
                <div class="input-group my-0">
                    <button class="btn btn-block btn-light border border-success bw-thick text-center font-weight-bold my-1 attributeBtn" data-attr="logic" data-shortTxt="LOG" data-longTxt="LOGIC" type="button">LOG</button>
                </div>
            </div>
            <div class="col-1 px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="number" id="logic" name="Logic" value="@Model.Logic" readonly />
                </div>
            </div>
            <div class="col-2 px-0">
                <div class="input-group my-0">
                    <button class="btn btn-block btn-light border border-success bw-thick text-center font-weight-bold my-1 attributeBtn" data-attr="endurance" data-shortTxt="END" data-longTxt="ENDURANCE" type="button">END</button>
                </div>
            </div>
            <div class="col-1 px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="number" id="endurance" name="Endurance" value="@Model.Endurance" readonly />
                </div>
            </div>
        </div>
        <!-- SEX || PER / AGL -->
        <div class="row bg-white">
            <div class="col-3 px-0">
                <h6 id="sexLbl" class="font-weight-bold my-3 text-center">SEX:</h6>
            </div>
            <div class="col-3 border-right border-dark px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="text" id="sex" name="Sex" value="@Model.Sex" readonly />
                </div>
            </div>

            <div class="col-2 px-0">
                <div class="input-group my-0">
                    <button class="btn btn-block btn-light border border-success bw-thick text-center font-weight-bold my-1 attributeBtn" data-attr="perception" data-shortTxt="PER" data-longTxt="PERCEPTION" type="button">PER</button>
                </div>
            </div>
            <div class="col-1 px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="number" id="perception" name="Perception" value="@Model.Perception" readonly />
                </div>
            </div>
            <div class="col-2 px-0">
                <div class="input-group my-0">
                    <button class="btn btn-block btn-light border border-success bw-thick text-center font-weight-bold my-1 attributeBtn" data-attr="agility" data-shortTxt="AGL" data-longTxt="AGILITY" type="button">AGL</button>
                </div>
            </div>
            <div class="col-1 px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="number" id="agility" name="Agility" value="@Model.Agility" readonly />
                </div>
            </div>
        </div>
        <!-- ETHNIC || WILL / SPD -->
        <div class="row bg-white">
            <div class="col-3 px-0">
                <h6 id="ethnicityLbl" class="font-weight-bold my-3 text-center" data-shortTxt="ETHNIC:" data-longTxt="ETHNICITY:">ETHNIC:</h6>
            </div>
            <div class="col-3 border-right border-dark px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="text" name="Ethnicity" value="@Model.Ethnicity" readonly />
                </div>
            </div>

            <div class="col-2 px-0">
                <div class="input-group my-0">
                    <button class="btn btn-block btn-light border border-success bw-thick text-center font-weight-bold my-1 attributeBtn" data-attr="willpower" data-shortTxt="WILL" data-longTxt="WILLPOWER" type="button">WILL</button>
                </div>
            </div>
            <div class="col-1 px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="number" id="willpower" name="Willpower" value="@Model.Willpower" readonly />
                </div>
            </div>
            <div class="col-2 px-0">
                <div class="input-group my-0">
                    <button class="btn btn-block btn-light border border-success bw-thick text-center font-weight-bold my-1 attributeBtn" data-attr="speed" data-shortTxt="SPD" data-longTxt="SPEED" type="button">SPD</button>
                </div>
            </div>
            <div class="col-1 px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="number" id="speed" name="Speed" value="@Model.Speed" readonly />
                </div>
            </div>
        </div>
        <!-- HAIR || CHA / BTY -->
        <div class="row bg-white">
            <div class="col-3 px-0">
                <h6 id="hairColorLbl" class="font-weight-bold my-3 text-center" data-shortTxt="HAIR:" data-longTxt="HAIR COLOR:">HAIR:</h6>
            </div>
            <div class="col-3 border-right border-dark px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="text" id="hairColor" name="HairColor" value="@Model.HairColor" readonly />
                </div>
            </div>

            <div class="col-2 px-0">
                <div class="input-group my-0">
                    <button class="btn btn-block btn-light border border-success bw-thick text-center font-weight-bold my-1 attributeBtn" data-attr="charisma" data-shortTxt="CHA" data-longTxt="CHARISMA" type="button">CHA</button>
                </div>
            </div>
            <div class="col-1 px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="number" id="charisma" name="Charisma" value="@Model.Charisma" readonly />
                </div>
            </div>
            <div class="col-2 px-0">
                <h6 id="beautyLbl" class="font-weight-bold my-3 text-center" data-shortTxt="BTY" data-longTxt="BEAUTY">BTY</h6>
            </div>
            <div class="col-1 px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="number" id="beauty" name="Beauty" value="@Model.Beauty" readonly />
                </div>
            </div>
        </div>
        <!-- EYE -->
        <div class="row bg-white">
            <div class="col-3 px-0">
                <h6 id="eyeColorLbl" class="font-weight-bold my-3 text-center" data-shortTxt="EYES:" data-longTxt="EYE COLOR:">EYES:</h6>
            </div>
            <div class="col-3 border-right border-dark px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="text" name="EyeColor" value="@Model.EyeColor" readonly />
                </div>
            </div>

            <div class="col-6 bg-secondary px-0">
                <h4 id="derivedAttrLbl" class="font-weight-bold my-2 text-center" data-shortTxt="DERIVED" data-longTxt="DERIVED TRAITS">DERIVED</h4>
            </div>
        </div>
        <!-- HAIRSTYLE || SEQ / ACT -->
        <div class="row bg-white">
            <div class="col-3 px-0">
                <h6 id="hairstyleLbl" class="font-weight-bold my-3 text-center">HAIRSTYLE:</h6>
            </div>
            <div class="col-3 border-right border-dark px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="text" id="Hairstyle" name="Hairstyle" value="@Model.HairStyle" readonly />
                </div>
            </div>

            <div class="col-2 bg-secondary px-0">
                <h6 id="sequenceLbl" class="font-weight-bold my-3 text-center text-white" data-shortTxt="SEQ" data-longTxt="SEQUENCE">SEQ</h6>
            </div>
            <div class="col-1 bg-secondary px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="number" id="sequence" name="Sequence" value="@Model.Sequence" readonly />
                </div>
            </div>
            <div class="col-2 bg-secondary px-0">
                <h6 id="actionsLbl" class="font-weight-bold my-3 text-center text-white" data-shortTxt="ACT" data-longTxt="ACTIONS">ACT</h6>
            </div>
            <div class="col-1 bg-secondary px-0">
                <div class="input-group my-2">
                    <input class="form-control text-center px-0 py-0" type="number" id="actions" name="Actions" value="@Model.Actions" readonly />
                </div>
            </div>
        </div>
        <!-- FACIAL || OFF / DOD -->
        <div class="row bg-white">
            <div class="col-3 px-0 facialHairDiv">
                <h6 id="facialHairLbl" class="font-weight-bold my-3 text-center">FACIAL HAIR:</h6>
