
@{
    ViewBag.Title = "Character Management";
}
@section Scripts
{
    <script src="@Url.Content("~/Scripts/Custom/CharacterMgmt.js")" type="text/javascript"></script>
}
@model TheAftermath_V2.Classes.CharacterData
<script type="text/javascript">
    $(document).ready(function () {
        $('body').css('background-image', 'url("../Content/Images/Textures/darkScratch.jpg")');
        $('#bodyContainer').removeClass("container").addClass("container-fluid");

        if ($("#sex").val() == "Female") $(".facialHairDiv").html("");
    });
</script>

<!-- TASKBAR -->
<div class="row bg-dark sticky-top border-0 border-white">
    <div class="col-8 px-0">
        <h5 class="font-weight-bold my-3 text-center text-white totalExpLbl">TOTAL EXP:</h5>
    </div>
    <div class="col-4 px-0">
        <div class="input-group my-2 text-center">
            <input class="form-control text-center px-0 py-0 totalExpVal" type="number" value="@Model.TotalExp" readonly />
        </div>
    </div>
    <div class="col-8 px-0">
        <h5 id="availExpLbl" class="font-weight-bold my-3 text-center text-white">EXP POOL:</h5>
    </div>
    <div id="skillPtsVal" class="col-4 px-0">
        <div class="input-group my-2 text-center">
            <input class="form-control text-center px-0 py-0 expPool" type="number" id="expPool" value="@Model.AvailableExp" readonly />
        </div>
    </div>
</div>

<!-- ATTRIBUTE ADJUSTMENT MODAL -->
<div class="modal fade" id="attributeModal" data-backdrop="static" tabindex="-3" aria-labelledby="attributeModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-xl">
        <div class="modal-header bg-black">
            <h4 class="modal-title font-weight-bold text-white mx-auto" id="staticBackdropLabel">ADJUST ATTRIBUTE</h4>
        </div>
        <div class="modal-content">
            <div class="modal-body">

                <div class="row bg-secondary" id="expPoolRow">
                    <div class="col-3"></div>
                    <div class="col-3">
                        <h5 class="font-weight-bold text-center my-3 mx-auto expPoolLbl" data-shortTxt="EXP:" data-longTxt="EXP POOL:">EXP:</h5>
                    </div>
                    <div class="col-3">
                        <div class="input-group my-2 text-center">
                            <input class="form-control text-center px-0 py-0 expPool" type="number" value="" readonly />
                        </div>
                    </div>
                    <div class="col-3"></div>
                </div>

                <div class="row bg-secondary" id="costRow">
                    <div class="col-3"></div>
                    <div class="col-3">
                        <h5 class="font-weight-bold text-center my-3 mx-auto costDefLbl" data-shortTxt="COST:" data-longTxt="COST TO INCREASE:">COST:</h5>
                    </div>
                    <div class="col-3">
                        <div class="input-group my-2 text-center">
                            <input class="form-control text-center px-0 py-0" id="attrCost" type="number" value="" readonly />
                        </div>
                    </div>
                    <div class="col-3"></div>
                </div>

                <div class="row bg-white">
                    <div class="col-1"></div>
                    <div class="col-2">
                        <button class="btn btn-block btn-dark text-center my-2 px-0" id="decAttrBtn">-</button>
                    </div>
                    <div class="col-3">
                        <h5 class="font-weight-bold text-center text-uppercase my-3 mx-auto" id="currentAttr" data-shortTxt="" data-longTxt=""></h5>
                    </div>
                    <div class="col-3">
                        <div class="input-group my-2 text-center">
                            <input class="form-control text-center px-0 py-0" type="number" id="currentAttrVal" name="CurrentAttrVal" value="" readonly />
                        </div>
                    </div>
                    <div class="col-2">
                        <button class="btn btn-block btn-dark text-center my-2 px-0" id="incAttrBtn">+</button>
                    </div>
                    <div class="col-1"></div>
                </div>

                <div class="row bg-white">
                    <div class="col-3"></div>
                    <div class="col-3">
                        <h5 class="font-weight-bold my-3 mx-auto text-center" id="originalAttr">ORIGINAL:</h5>
                    </div>
                    <div class="col-3">
                        <div class="input-group my-2 text-center">
                            <input class="form-control text-center px-0 py-0" type="number" id="originalAttrVal" name="OriginalAttrVal" value="" readonly />
                        </div>
                    </div>
                    <div class="col-3"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="attrConfirmBtn" class="btn btn-lg btn-success border border-dark mx-auto" data-attr="">CONFIRM</button>
                <button type="button" id="attrCancelBtn" class="btn btn-lg btn-danger border border-dark mx-auto" data-dismiss="modal">CANCEL</button>
            </div>
        </div>
    </div>
</div>

<!-- SKILL ADJUSTMENT MODAL -->
<div class="modal fade" id="skillModal" data-backdrop="static" tabindex="-4" aria-labelledby="skillModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-xl">
        <div class="modal-header bg-black">
            <h4 class="modal-title font-weight-bold text-white mx-auto" id="staticBackdropLabel">ADJUST SKILL</h4>
        </div>
